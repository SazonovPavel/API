	"item": [
		{
			"name": "CreateNewBoard",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"tests[\"Status code is 200\"] = responseCode.code === 200;\r",
							"\r",
							"var jsonData = JSON.parse(responseBody);\r",
							"tests[\"Board name should be 'My new board'\"] = jsonData.name === postman.getEnvironmentVariable(\"boardName\");\r",
							"\r",
							"\r",
							"\r",
							"postman.setEnvironmentVariable(\"boardId\", jsonData.id);\r",
							""
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"var currentBoardNumber = postman.getEnvironmentVariable(\"currentBoardNumber\");\r",
							"\r",
							"if (currentBoardNumber) {\r",
							"    currentBoardNumber++;\r",
							"} else {\r",
							"    currentBoardNumber = 1;\r",
							"}\r",
							"\r",
							"\r",
							"var boardName = \"My board \" + currentBoardNumber;\r",
							"\r",
							"postman.setEnvironmentVariable(\"boardName\", boardName);\r",
							"postman.setEnvironmentVariable(\"currentBoardNumber\", currentBoardNumber);\r",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"url": {
					"raw": "https://api.trello.com/1/boards/?name={{boardName}}&key={{trelloKey}}&token={{trelloToken}}&defaultLists=false",
					"protocol": "https",
					"host": [
						"api",
						"trello",
						"com"
					],
					"path": [
						"1",
						"boards",
						""
					],
					"query": [
						{
							"key": "name",
							"value": "{{boardName}}"
						},
						{
							"key": "key",
							"value": "{{trelloKey}}"
						},
						{
							"key": "token",
							"value": "{{trelloToken}}"
						},
						{
							"key": "defaultLists",
							"value": "false"
						}
					]
				}
			},
			"response": []
